<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculatordemo.MainActivity" >
	<EditText 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:id="@+id/et_input"
	    android:background="@drawable/white_dp"
	    android:editable="false"
	    android:gravity="right|bottom"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"
	 >   
	 <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="C"
	     android:textSize="20sp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_clear"/>
	 <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="DEL"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:textSize="20sp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_del"/>
	  <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="รท"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:textSize="20sp"
	     android:id="@+id/bt_devide"/>
	  <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="ร"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:textSize="20sp"
	     android:id="@+id/bt_multiply"/>
	    </LinearLayout>
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"
	 >   
	 <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="7"
	     android:textSize="20sp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_7"/>
	 <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="8"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:textSize="20sp"
	     android:background="@drawable/white_selector"
	     android:gravity="right|bottom"
	     android:id="@+id/bt_8"/>
	  <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="9"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:textSize="20sp"
	     android:id="@+id/bt_9"/>
	  <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="-"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:textSize="20sp"
	     android:id="@+id/bt_minus"/>
	    </LinearLayout> 
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"
	 >   
	 <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="4"
	     android:textSize="20sp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_4"/>
	 <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="5"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:textSize="20sp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_5"/>
	  <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="6"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:textSize="20sp"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_6"/>
	  <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="+"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:textSize="20sp"
	     android:id="@+id/bt_plus"/>
	    </LinearLayout>
	    <LinearLayout 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:layout_marginTop="10dp"
	      android:orientation="horizontal"
	      android:gravity="center_horizontal"  >
	  <LinearLayout 
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"  
	      >
	      <LinearLayout 
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:orientation="horizontal"  >
	        <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="1"
	     android:textSize="20sp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_1"/>  
	         <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="2"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:textSize="20sp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_2"/>  
	       <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="3"
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:textSize="20sp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_3"/>
	      </LinearLayout>
	      <LinearLayout 
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:orientation="horizontal" >
	           <Button 
	     android:layout_width="130dp"
	     android:layout_height="60dp"
	     android:text="0"
	     android:textSize="20sp"
	     android:layout_marginTop="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:gravity="right|bottom"
	     android:background="@drawable/white_selector"
	     android:id="@+id/bt_0"/> 
	       <Button 
	     android:layout_width="60dp"
	     android:layout_height="60dp"
	     android:text="."
	     android:layout_marginLeft="10dp"
	     android:layout_marginTop="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:textSize="20sp"
	     android:background="@drawable/white_selector"
	     android:gravity="right|bottom"
	     android:id="@+id/bt_point"/>
	          </LinearLayout>
	      </LinearLayout>
	      <Button 
	     android:layout_width="60dp"
	     android:layout_height="130dp"
	     android:text="="
	     android:layout_marginLeft="10dp"
	     android:paddingRight="10dp"
	     android:paddingBottom="10dp"
	     android:textSize="20sp"
	     android:background="@drawable/orange_selector"
	     android:gravity="right|bottom"
	     android:id="@+id/bt_equal" /> 
	     </LinearLayout>
    

</LinearLayout>
